# Multi-Storage Configuration
# Copy this to .env and fill in your credentials

# Firebase Configuration (Primary Storage)
# Download your Firebase service account key from Firebase Console
# Place it as 'firebase-service-account.json' in the backend directory
FIREBASE_PROJECT_ID=infinityhole-e4e92
FIREBASE_STORAGE_BUCKET=infinityhole-e4e92.firebasestorage.app

# Cloudinary Configuration (Backup Storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 Configuration (Optional - Third Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# Storage Limits (in MB)
FIREBASE_FREE_TIER_MB=100
CLOUDINARY_FREE_TIER_MB=25
LOCAL_STORAGE_LIMIT_MB=1000
AD_BONUS_STORAGE_MB=10

# Other Configuration
SECRET_KEY=your-secret-key-change-in-production
STORAGE_DIR=./downloads
CLEANUP_INTERVAL_HOURS=2
MAX_FILE_SIZE_MB=500
